<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- HEADER (título + iconos + buscador + "Notas") -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notipad Memo"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Fila de iconos superiores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:src="@drawable/ico_notificacion"
                app:tint="?android:textColorPrimary" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:src="@drawable/ico_usuario"
                app:tint="?android:textColorPrimary" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:src="@drawable/ico_opciones"
                app:tint="?android:textColorPrimary" />
        </LinearLayout>

        <!-- Buscador -->
        <EditText
            android:id="@+id/edtBuscar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Buscar nota"
            android:drawableStart="@drawable/ico_menu"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="?android:textColorPrimary"
            android:background="?attr/colorSurface"
            app:tint="?android:textColorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Encabezado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />
    </LinearLayout>

    <!-- BOTTOM BAR (misma barra con mismos IDs) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:background="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Modo -->
        <LinearLayout
            android:id="@+id/btnModo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_sol"
                app:tint="?android:textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Modo"
                android:textColor="?android:textColorPrimary" />
        </LinearLayout>

        <!-- Botón Papelera -->
        <LinearLayout
            android:id="@+id/btnBorrar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_eliminar"
                app:tint="?android:textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papelera"
                android:textColor="?android:textColorPrimary"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Botón Nueva Nota -->
        <LinearLayout
            android:id="@+id/btnNuevo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_nuevanota"
                app:tint="?android:textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo"
                android:textColor="?android:textColorPrimary"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- LISTA -->
    <ListView
        android:id="@+id/listNotas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp"
        android:background="?android:colorBackground"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto vacío (mismo ID) -->
    <TextView
        android:id="@+id/emptyNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay notas por aquí..."
        android:textColor="?android:textColorPrimary"
        android:alpha="0.6"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

