<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL (scrollable) -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- TODO: Pega aquí tu contenido actual de la actividad (lo que antes estaba dentro del ScrollView) -->
        <!-- Si ya tenías un LinearLayout con todo el contenido, colócalo aquí dentro -->
        <LinearLayout
            android:id="@+id/contentRoot"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- EJEMPLO de encabezado existente (ajústalo a lo tuyo) -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notipad Memo"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="12dp" />

            <!-- Aquí seguirían tus vistas: lista, tarjetas, etc. -->

        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR FIJA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="?android:colorBackground"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|space_between">

        <!-- Botón: Modo Claro/Oscuro -->
        <ImageButton
            android:id="@+id/btnTheme"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cambiar_tema"
            android:src="@android:drawable/btn_star" />

        <!-- Botón: Papelera -->
        <ImageButton
            android:id="@+id/btnPapelera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/papelera"
            android:src="@android:drawable/ic_menu_delete" />

        <!-- Botón: Nueva nota -->
        <Button
            android:id="@+id/btnNuevaNota"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="120dp"
            android:text="Nueva"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
